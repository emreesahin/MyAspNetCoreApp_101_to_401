
@{
    ViewData["Title"] = "Add";
}


@model Product 



<h1>Ürün Ekle</h1>

<form  asp-controller="Product" asp-action="Add" method="post">
    <label>Ürün İsmi: </label>
    <input type="text"  asp-for="Name" />
    <br />
    <label>Ürün Fiyat: </label>
    <input type="text" asp-for="Price" />
    <br />
    <label>Ürün Stok: </label>
    <input type="text" asp-for="Stock" />
    <br />
    <label>Ürün Renk: </label>
    <input type="text" asp-for="Color" />
    <button type="submit">Ürün Kaydet</button>
</form>

