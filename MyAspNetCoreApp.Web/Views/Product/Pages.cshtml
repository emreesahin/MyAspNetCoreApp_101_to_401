
@{
    ViewData["Title"] = "Pages";
}

<h1>Pages</h1>

<h2>page: @ViewBag.page</h2>
<h2>pageSize: @ViewBag.pageSize</h2>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th>Fiyat</th>
            <th>Stock</th>
            <th>Renk</th>
            <th>Yayınlansın mı?</th>
            <th>Geçerlilik Süresi (Ay)</th>
            <th>Açıklama</th>
            <th>İşlem</th>


        </tr> 
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>@item.Stock</td>
                    <td>@item.Color</td>
                    <td>
                    @(item.isPublish ? "Evet" : "Hayır")
                    </td>

                    <td>@item.Expire</td>
                    <td>@(item.Description.Length > 20 ? @item.Description.Substring(0, 20) + "..." : @item.Description) </td>

                    <td><a asp-controller="Product" asp-action="Remove" asp-route-id="@item.Id">Sil</a>
                            <a asp-controller="Product" asp-action="Update" asp-route-id="@item.Id">Güncelle</a>
                            <a asp-route="product" asp-route-productid="@item.Id">Görüntüle</a> 
                        </td>
                </tr>
        }
    </tbody>
</table>
